
    <%- include('partials/head') %>
    <title>Entry form</title>
  </head>
  <body id="entry-form-body">
    <div class="container-fluid" >
      <div class="row justify-content-center">
        <div class="col-12 col-md-10">
        
    <form class="entry-form-container" action="/note" method="POST" >
      <h2>Record of Bird Sighting</h2>
      
      <div class="form-group">
        <label for="behaviour">Behaviour: </label>
        <textarea class="form-control" rows="5" name="behaviour" id="behaviour"></textarea>
      </div>
      <div class="form-group">
        <label for="flock_size">Flock size: </label>
        <input class="form-control" rows="5" name="flock_size" id="flock_size">
      </div>
      <div class="form-group">
      <label for="date">Date: </label>
      <input class="form-control" type="date" name="date" id="date" min="2015/01/01">
      </div>
  <br><br>
      <button type="submit" class="btn btn-secondary">Submit</button>
    </form>
        </div>
      </div>
    </div>

     <%- include ('partials/footer') %>